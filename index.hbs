---
layout: base-layout.hbs
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{{#each posts}}
  <article>

    <h1>
      <a href="{{ this.url }}">{{ this.data.title }}</a>
    </h1>

    <time datetime="{{ this.date }}">{{ this.date }}</time>

    {{{ excerpt this }}}

    <a href="{{ this.url }}">Read more</a>

  </article>
{{/each}}